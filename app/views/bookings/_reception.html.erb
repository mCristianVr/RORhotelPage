  <tbody class="">
<% Booking.each do |book| %>
  <!---------------- Por cada Reserva ===============----->
<tr class="text-center align-middle">

	<td><%= book[:dateRange].split(/ to /)[0] %></td>
	<td><%= book[:dateRange].split(/ to /)[1] %></td>
	<td><%= Style.find_by( _id: book[:style_id] ).desc %></td>
	<td><%= Room.find_by( _id: book[:room_id] ).num %></td>
	<td><%= User.find_by( _id: book[:user_id] ).name %></td>

	<td class="d-flex">
		<%= link_to 'Edit', edit_booking_path(book), class: "editButton" %>
		<%= link_to 'Cancelar', book, method: :delete, data: { confirm: 'Estas seguro de cancelar esta reserva?' }, class: "editButton" %> 
	</td>

</tr>
       
<% end %>

